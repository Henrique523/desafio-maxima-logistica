FROM openjdk:11-jdk

ENV APPLICATION_SERVER_PORT="<PORTA_TOMCAT_CUSTOMIZADA>"
ENV DATABASE_URL "jdbc:postgresql://<IP_INTERNO_MÁQUINA_DOCKER>:<PORTA_POSTGRESQL>/<BANCO_DE_DADOS_CRIADO>"
ENV DATABASE_USERNAME="<USUARIO_POSTGRES>"
ENV DATABASE_PASSWORD="<SENHA_POSTGRES>"

EXPOSE ${APPLICATION_SERVER_PORT}

ARG JAR_FILE=target/*.jar
COPY ${JAR_FILE} app.jar
ENTRYPOINT ["java","-jar","/app.jar"]
